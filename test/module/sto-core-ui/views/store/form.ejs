<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center fw-bold mb-2"><%= title %></h1>
            <p class="text-center text-muted mb-4"><%= message %></p>
            <form action="<%= basePath %>/add" method="POST">
                <div class="row gy-3">
                    <div class="col-12 d-flex align-items-center">
                        <label for="sto_id" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">스토어 ID</label>
                        <input type="text" id="sto_id" name="sto_id" class="form-control" placeholder="스토어 ID" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label for="sto_name" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">스토어명</label>
                        <input type="text" id="sto_name" name="sto_name" class="form-control" placeholder="스토어명" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label for="status_cd" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">상태 코드</label>
                        <input type="number" id="status_cd" name="status_cd" class="form-control" placeholder="상태 코드" required>
                    </div>
                    <% for (const key in output.columns) { %>
                        <% if (output.columns[key].isDynamic && output.columns[key].visible) { %>
                            <div class="col-12 d-flex align-items-center">
                                <label for="<%= key %>" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;"><%= key %></label>
                                <input type="text" id="<%= key %>" name="<%= key %>" class="form-control" placeholder="<%= key %>" <% if (!output.columns[key].nullable) { %> required <% } %> >
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-4">Add Store</button>
            </form>
        </div>
    </div>
</div>