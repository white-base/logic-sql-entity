<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center fw-bold mb-2"><%= title %></h1>
            <p class="text-center text-muted mb-4"><%= message %></p>
            <form action="" method="POST">
                <!-- <input type="hidden" name="acc_idx" value="<%= row.acc_idx %>" /> -->
                <div class="row gy-3">
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">스토어 ID</label>
                        <input type="text" class="form-control" value="<%= row.sto_id %>" readonly>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">스토어명</label>
                        <input type="text" class="form-control" name="sto_name" placeholder="<%= output.columns['sto_name'].placeholder || '스토어명' %>" required value="<%= row.sto_name %>">
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">상태 코드</label>
                        <input type="number" class="form-control" name="status_cd" value="<%= row.status_cd %>" placeholder="<%= output.columns['status_cd'].placeholder || '상태 코드' %>" required>
                    </div>
                    <% for (const key in output.columns) { %>
                        <% if (output.columns[key].isDynamic && output.columns[key].visible) { %>
                            <div class="col-12 d-flex align-items-center">
                                <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;"><%= key %></label>
                                <input type="text" class="form-control" name="<%= key %>" value="<%= row[key] %>" placeholder="<%= output.columns[key].placeholder || key %>" <% if (!output.columns[key].nullable) { %> required <% } %> >
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div class="d-flex justify-content-center gap-2 mt-4">
                    <a href="<%= basePath %>/" class="btn btn-outline-secondary">목록</a>
                    <button type="submit" formaction="<%= basePath %>/update/<%= row.sto_id %>" class="btn btn-primary">수정</button>
                    <button type="submit" formaction="<%= basePath %>/del/<%= row.sto_id %>" class="btn btn-danger">삭제</button>
                </div>
            </form>
        </div>
    </div>
</div>
