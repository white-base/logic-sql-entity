
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= title || '기본 제목' %></title>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Arial, sans-serif;
      background: #f7f7f7;
    }
    .layout-header {
      background: #2c3e50;
      color: #fff;
      padding: 20px 30px 10px 30px;
      font-size: 1.5em;
      font-weight: bold;
      letter-spacing: 1px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }
    .layout-container {
      display: flex;
      min-height: 90vh;
    }
    .sidebar {
      width: 200px;
      background: #fff;
      border-right: 1px solid #e0e0e0;
      box-shadow: 2px 0 8px rgba(0,0,0,0.03);
      padding: 0;
      display: flex;
      flex-direction: column;
    }
    .menu-lv1 {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .menu-lv1 > li {
      border-bottom: 1px solid #f0f0f0;
      margin-bottom: 0;
    }
    .menu-lv1-title {
      padding: 10px 18px 8px 18px;
      background: #f5f6fa;
      font-weight: 600;
      color: #34495e;
      cursor: pointer;
      font-size: 1.08em;
      transition: background 0.2s;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .menu-lv1-title:hover {
      background: #eaf1fb;
    }
    .menu-lv2 {
      list-style: none;
      margin: 0;
      padding: 0 0 0 32px;
      background: #fafbfc;
    }
    .menu-lv2 > li {
      padding: 4px 0 4px 0;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .menu-lv2 .menu-lv2-icon {
      color: #bbb;
      font-size: 1em;
      margin-right: 2px;
      user-select: none;
    }
    .menu-lv2 a {
      color: #2980b9;
      text-decoration: none;
      font-size: 0.98em;
      transition: color 0.2s;
      padding-left: 0;
    }
    .menu-lv2 a:hover {
      color: #1abc9c;
      text-decoration: underline;
    }
    .main-content {
      flex: 1;
      padding: 40px 40px 20px 40px;
      background: #f7f7f7;
      min-width: 0;
    }
    @media (max-width: 900px) {
      .layout-container { flex-direction: column; }
      .sidebar { width: 100%; border-right: none; border-bottom: 1px solid #e0e0e0; }
      .main-content { padding: 20px; }
    }
  </style>
</head>
<body>
  <div class="layout-header">
    <%= title || '기본 제목' %>
  </div>
  <div class="layout-container">
    <nav class="sidebar">
      <ul class="menu-lv1">
        <% menuMap.forEach(function(lv1) { %>
          <li>
            <div class="menu-lv1-title"><%= lv1.title %></div>
            <% if (lv1.items && lv1.items.length) { %>
              <ul class="menu-lv2">
                <% lv1.items.forEach(function(lv2) { %>
                  <li>
                    <span class="menu-lv2-icon">+</span>
                    <a href="<%= lv2.url %>"><%= lv2.title %></a>
                  </li>
                <% }); %>
              </ul>
            <% } %>
          </li>
        <% }); %>
      </ul>
    </nav>
    <main class="main-content">
      <%- body %>
    </main>
  </div>
</body>
</html>