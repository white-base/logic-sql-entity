<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center fw-bold mb-2"><%= title %></h1>
            <p class="text-center text-muted mb-4"><%= message %></p>
            <form action="" method="POST">
                <div class="row gy-3">
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">스토어 ID</label>
                        <span><%= row.sto_id %></span>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">Admin_ID</label>
                        <span><%= row.admin_id %></span>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">Password</label>
                        <input type="password" class="form-control" name="admin_pw" value="<%= row.admin_pw %>" placeholder="<%= output.columns['admin_pw'].placeholder || 'Password' %>" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">Name</label>
                        <input type="text" class="form-control" name="admin_name" value="<%= row.admin_name %>" placeholder="<%= output.columns['admin_name'].placeholder || 'Name' %>" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;">Use</label>
                        <input type="checkbox" class="form-check-input ms-2" name="use_yn" value="Y" <%= row.use_yn === 'Y' ? 'checked' : '' %> >
                        <label class="form-check-label ms-2" for="use_yn">Active</label>
                    </div>
                    <% for (const key in output.columns) { %>
                        <% if (output.columns[key].isDynamic && output.columns[key].visible) { %>
                            <div class="col-12 d-flex align-items-center">
                                <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px;"><%= key %></label>
                                <input type="text" class="form-control" name="<%= key %>" value="<%= row[key] %>" placeholder="<%= output.columns[key].placeholder || key %>" <% if (!output.columns[key].nullable) { %> required <% } %> >
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div class="d-flex justify-content-center gap-2 mt-4">
                    <a href="<%= basePath %>/" class="btn btn-outline-secondary">목록</a>
                    <button type="submit" formaction="<%= basePath %>/update/<%= row.acc_idx %>" class="btn btn-primary">수정</button>
                    <button type="submit" formaction="<%= basePath %>/del/<%= row.acc_idx %>" class="btn btn-danger">삭제</button>
                </div>
            </form>
        </div>
    </div>
</div>
