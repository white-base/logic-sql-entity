<h1 class="mt-4 mb-3"><%= title %></h1>
<div class="alert alert-info"><%= message %></div>
<p class="mb-3">Total Users: <span class="badge bg-primary"><%= output.rows.count %></span></p>
<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>STO_ID</th>
            <th>ID</th>
            <th>Name</th>
            <th>USE</th>
            <th>Create</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% if (output.rows.length === 0) { %>
            <tr>
                <td colspan="8" class="text-center">No users found.</td>
            </tr>
        <% } else { %>
            <% output.rows.forEach(function(user) { %>
                <tr>
                    <form action="<%= basePath %>/delete/<%= user.sto_id %>" method="POST" style="display:inline">
                        <input type="hidden" name="acc_idx" value="<%= user.acc_idx %>" />
                        <td><%= user.sto_id %></td>
                        <td><%= user.admin_id %></td>
                        <td><%= user.admin_name %></td> 
                        <td class="text-center"><%= user.use_yn === 'Y' ? 'Active' : 'Inactive' %></td>
                        <td><%= user.create_dt %></td>
                        <td>
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="location.href='<%= basePath %>/detail/<%= user.acc_idx %>'">수정</button>
                        </td>
                    </form>
                </tr>
            <% }); %>
        <% } %>
    </tbody>
</table>