<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center fw-bold mb-2"><%= title %></h1>
            <p class="text-center text-muted mb-4"><%= message %></p>
            <form action="<%= basePath %>/add" method="POST">
                <div class="row gy-3">
                    <div class="col-12 d-flex align-items-center">
                        <label for="sto_id" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">스토어 선택</label>
                        <select id="sto_id" name="sto_id" class="form-select" required>
                            <% store.rows.forEach(row => { %>
                                <option value="<%= row.sto_id %>"><%= row.sto_id %> - <%= row.sto_name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label for="admin_id" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">관리자 ID</label>
                        <input type="text" id="admin_id" name="admin_id" class="form-control" placeholder="admin_id" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label for="admin_pw" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">관리자 PW</label>
                        <input type="password" id="admin_pw" name="admin_pw" class="form-control" placeholder="admin_pw" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label for="admin_name" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">관리자명</label>
                        <input type="text" id="admin_name" name="admin_name" class="form-control" placeholder="admin_name" required>
                    </div>
                    <div class="col-12 d-flex align-items-center">
                        <label class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;">사용 여부</label>
                        <input class="form-check-input ms-2" type="checkbox" id="use_yn" name="use_yn" value="Y">
                        <label class="form-check-label ms-2" for="use_yn">use_yn</label>
                    </div>
                    <% for (const key in output.columns) { %>
                        <% if (output.columns[key].isDynamic && output.columns[key].visible) { %>
                            <div class="col-12 d-flex align-items-center">
                                <label for="<%= key %>" class="form-label fw-semibold me-3 mb-0" style="min-width: 100px; text-align:left;"><%= key %></label>
                                <input type="text" id="<%= key %>" name="<%= key %>" class="form-control" placeholder="<%= key %>" <% if (!output.columns[key].nullable) { %> required <% } %> >
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-4">Add User</button>
            </form>
        </div>
    </div>
</div>